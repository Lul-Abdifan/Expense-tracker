<div id="<%= dom_id category %>" class="category-item">
 <div>
  <p>
 
  <img src="{category.icon}" alt="Category Icon">
  </p>
 </div>

<div>
  <p><%=link_to category.name, category_entities_path(category), class:"entities-list"%></p>
  <p>
    
   <%= Time.now.strftime('%B %d, %Y') %>
  </p>

</div>
<div>
<p>
  <% if category.entities.exists? %>
    $<%= category.entities.sum(:amount) %>
  <% else %>
    $0
  <% end %>
</p>



</div>


</div>
  