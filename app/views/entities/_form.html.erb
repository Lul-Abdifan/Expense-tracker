 <%= form_with(model: entity,url: category_entities_path(params[:category_id])) do |form| %>
  <% if entity.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(entity.errors.count, "error") %> prohibited this entity from being saved:</h2>

      <ul>
        <% entity.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">

    <%= form.text_field :name,placeholder:"Name"   %>
  </div>

  <div class="field">

    <%= form.number_field :amount,placeholder:"price"  %>
  </div>

  <div class="field">
  <%= form.collection_select :category_id, current_user.categories, :id, :name, { prompt: true }, { class: "form-control" } %>

  </div>


  <div class="entity-submit">
    <%= form.submit "Save", class:"entity-submit-icon"%>
  </div>
<% end %>
